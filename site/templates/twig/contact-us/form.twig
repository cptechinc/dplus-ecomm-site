{% import "util/macros/html.twig" as html %}

<form action="./" method="POST" id="contactForm">
	<input type="hidden" name="action" value="contact-us">

	{% if config.recaptcha.siteKey %}
		<input type="hidden" name="recaptcha" id="recaptcha" value="">
	{% endif %}

	<div class="row">
		<div class="col-6">
			<div class="form-group">
				<label for="firstname">First Name</label>
				{% include 'util/bootstrap/form/input.twig' with {
					'input': {
						'name': 'firstname',
						'attributes': {
							'aria-label':  'First Name',
							'placeholder': 'Peter',
							'required': true,
						}
					}
				} %}
			</div>
		</div>
		<div class="col-6">
			<div class="form-group">
				<label for="lastname">Last Name</label>
				{% include 'util/bootstrap/form/input.twig' with {
					'input': {
						'name': 'lastname',
						'attributes': {
							'aria-label':  'Last Name',
							'placeholder': 'Parker',
							'required': true,
						}
					}
				} %}
			</div>
		</div>
		<div class="col-sm-6">
			<div class="form-group">
				<label for="email">Email</label>
				{% include 'account/shared/form/inputs/email.twig' %}
			</div>
		</div>
		<div class="col-sm-6">
			<div class="form-group">
				<label for="phone">Phone</label>
				{% include 'account/shared/form/inputs/phone.twig' %}
			</div>
		</div>
		<div class="col-sm-12">
			<div class="form-group">
				<label for="subject">Subject</label>
				{% include 'util/bootstrap/form/input.twig' with {
					'input': {
						'name': 'subject',
						'attributes': {
							'aria-label':  'Message Subject',
							'required': true,
						}
					}
				} %}
			</div>
		</div>
		<div class="col-sm-12">
			<div class="form-group">
				<label for="message">Message</label>
				<textarea id="message" name="message" class="form-control"></textarea>
			</div>
		</div>
	</div>

	{% if config.recaptcha.siteKey %}
		<div class="mb-3">
			<div class="g-recaptcha" id="captcha" data-sitekey="{{ config.recaptcha.siteKey }}" data-callback="recaptchaCallback" data-expired-callback="recaptchaExpired">
			</div>
		</div>
	{% endif %}
	
	<div class="text-center">
		<button type="submit" class="btn {{ CSS.colors.buttons.getClass('submit') }}">
			{{ html.iconType({'type': 'email'}) }} Send message
		</button>
	</div>
</form>