{% import "util/macros/html.twig" as html %}

{% if session.getFor('login', 'attempts') %}
	<div class="mb-3">
		{{ html.alert({'type': 'danger', 'icon': {'type': 'warning'}, 'title': 'Invalid Email / Password'}) }}
	</div>
{% endif %}

{% include 'login/form.twig' %}

<div class="d-flex w-100 justify-content-between">
	<div>
		<p class="lead mb-1">Forgot Password?</p>
		<a href="{{ page.forgotPasswordUrl() }}" class="btn btn-block {{ CSS.colors.buttons.getClass('link') }}">
			{{ html.iconType({'type': 'lock'}) }}  Recover Account
		</a>
	</div>
	<div>
		<p class="lead mb-1">Forgot Login?</p>
		<a href="{# pages.get('template=contact').url #}" class="btn btn-block {{ CSS.colors.buttons.getClass('link') }}">
			Contact Us
		</a>
	</div>
	{% if config.register.allowRegister %}
		<div>
			<p class="lead mb-1">Request Login</p>
			<a href="{{ page.registerUrl() }}" class="btn btn-block {{ CSS.colors.buttons.getClass('link') }}">
				{{ html.iconType({'type': 'lock'}) }}  Register
			</a>
		</div>
	{% endif %}
</div>