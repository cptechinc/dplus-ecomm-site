{% extends 'blog/layout.twig' %}

{% block body %}
	<div class="row">
		<div class="col-sm-9 order-2 order-sm-1">
			{% include 'blog/blog-categories/list-categories.twig' %}
		</div>
		<div class="col-sm-3 order-1 order-sm-2">
			<h4>Go to Letter</h4>
			<ul class="tag-cloud list-inline">
				{% for key, sublist in categories %}
					<li class="list-inline-item">
						<a href="#{{ key }}">{{ key }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}
