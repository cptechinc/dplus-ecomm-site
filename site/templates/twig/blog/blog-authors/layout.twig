{#
	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page(template=blog-tag)
	authors                ProcessWire\WireArray => WireArray(User)
#}

<div class="mb-3">
	<div class="row">
		<div class="col-sm-9">
			{% include 'blog/blog-authors/list-authors.twig' %}
		</div>
		<div class="col-sm-3">
			<h4>Go to Letter</h4>
			<ul class="tag-cloud list-inline">
				{% for key, sublist in authors %}
					<li class="list-inline-item">
						<a href="#{{ key }}">{{ key }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<hr>
	<a href="{{ pages.get('template=blog').url }}" class="btn {{ CSS.colors.buttons.getClass('link') }}">Blog</a>
</div>