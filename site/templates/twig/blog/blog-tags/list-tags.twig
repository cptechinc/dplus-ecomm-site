	var                    Description / Instance of
	-------------------------------------------------
	page                   ProcessWire\Page(template=blog-tags)
	tags                   ProcessWire\PageArray(template=blog-tag)
#}
{% import "util/macros/html.twig" as html %}

<ul class="tag-cloud list-inline">
	{% for tag in tags %}
		<li class="list-inline-item">
			<a href="{{ tag.url() }}">
				{{ html.iconType({'type': 'tags'}) }} {{ tag.title }}
			</a>
		</li>
	{% endfor %}
</ul>