{% import "util/macros/html.twig" as html %}

<div class="offset-1 col-10 offset-sm-2 col-sm-8 px-0">
	<section class="bar pt-4">
		<div class="heading">
			<h2>Forgot Password</h2>
		</div>

		{% if session.getFor('forgot-password', 'emailsent') %}
			<div class="mb-3">
				{{ html.alert({'type': 'success', 'icon': {'type': 'warning'}, 'title': 'Email Sent', 'message': 'Email was sent to ' ~ session.getFor('forgot-password', 'emailsent')}) }}
			</div>
		{% else %}
			{% include 'account/forgot-password/form.twig' %}

			<hr>

			<div class="row">
				<div class="col-6 col-sm-4 mb-3">
					<a href="{{ pages.get('template=login').url }}" class="btn btn-block {{ CSS.colors.buttons.getClass('link') }}">
						{{ html.iconType({'type': 'lock'}) }} Login
					</a>
				</div>

				<div class="col-6 col-sm-4 mb-2">
					<a href="{{ pages.get('template=contact-us').url }}" class="btn btn-block {{ CSS.colors.buttons.getClass('link') }}">
						Contact Us
					</a>
				</div>
			</div>
		{% endif %}
	</section>
</div>