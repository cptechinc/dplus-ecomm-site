<form action="{{ input.url() }}" method="POST" class="allow-enterkey-submit" id="firstLoginForm">
	<input type="hidden" name="action" value="first-change-password">

	<legend>Let's get your account started</legend>
	<p>
		This is your first time logging in. You must change your password and answer the two security questions. Password can't exceed 10 characters
	</p>

	<div class="row">
		<div class="col-sm-6 form-group">
			<label for="password">Current Password</label>
			{% include 'account/shared/form/inputs/password-x.twig' with {'name': 'password'} %}
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6 form-group">
			<label for="securityAnswer1">{{ config.account.labelSecurityQuestion1 }}</label>
			{% include 'account/shared/form/inputs/security-answer1.twig' %}
		</div>
		<div class="col-sm-6 form-group">
			<label for="securityAnswer2">{{ config.account.labelSecurityQuestion2 }}</label>
			{% include 'account/shared/form/inputs/security-answer2.twig' %}
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6 form-group">
			<label for="npassword">New Password</label>
			{% include 'account/shared/form/inputs/password-x.twig' with {'name': 'npassword'} %}
		</div>
		<div class="col-sm-6 form-group">
			<label for="cpassword">Confirm Password</label>
			{% include 'account/shared/form/inputs/password-x.twig' with {'name': 'cpassword'} %}
		</div>
	</div>

	<hr>

	<div class="text-center">
		<button type="submit" class="btn btn-block {{ CSS.colors.buttons.getClass('submit') }}">
			Submit
		</button>
	</div>
</form>
