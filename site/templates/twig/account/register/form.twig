<form action="{{ input.url() }}" method="POST" class="allow-enterkey-submit">
	<input type="hidden" name="action" value="register">

	<legend>Let's get your account started</legend>
	<p>
		Please fill out the requested information. Once {{ homepage.title }} receives this information we will immediately process your request and email you with your password. All fields are required and must be filled out.
	</p>

	<div class="row">
		<div class="col-sm-6 form-group">
			<label for="email">Email</label>
			{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'email',
					'type': 'email',
					'attributes': {
						'aria-label':  'Email',
						'placeholder': 'user@example.com'
					}
				}
			} %}
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6 form-group">
			<label for="email">Mother's Maiden Name</label>
			{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'securityAnswer1',
					'attributes': {
						'placeholder': '',
						'aria-label':  "Mother's Maiden Name"
					}
				}
			} %}
		</div>
		<div class="col-sm-6 form-group">
			<label for="email">What city were you born in?</label>
			{% include 'util/bootstrap/form/input.twig' with {
				'input': {
					'name': 'securityAnswer2',
					'attributes': {
						'placeholder': '',
						'aria-label':  "What city were you born in"
					}
				}
			} %}
		</div>
	</div>

	<hr>

	<div class="text-center">
		<button type="submit" class="btn btn-block {{ CSS.colors.buttons.getClass('submit') }}">
			Submit
		</button>
	</div>
</form>
